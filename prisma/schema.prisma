// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  FREE
  PAID
}

model User {
  id    String     @id @default(uuid())
  email String  @unique
  name  String?
  imageUrl  String?
  posts    Post[] @relation("posts")
  userType    UserType    @default(FREE)
  ai_records   AiRecord[] @relation("ai_records")
  wait_lists    WaitList[]   @relation("wait_lists")
}

model WaitList {
  id           String @id @default(uuid())
  userId       String?
  user         User?  @relation("wait_lists", fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())
  @@index([userId])
}

model Post {
  id           String @id @default(uuid())
  title        String
  content      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())
  userId       String?
  user         User?  @relation("posts", fields: [userId], references: [id])
  @@index([userId])
}

model AiRecord {
  id           String @id @default(uuid())
  prompt       String
  answer       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())
  userId       String?
  user         User?  @relation("ai_records", fields: [userId], references: [id]) 
  @@index([userId])
}